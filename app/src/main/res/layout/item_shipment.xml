<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"

    app:cardUseCompatPadding="true"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:maxLines="2"
            android:textStyle="bold"
            android:ellipsize="end"
            android:text="Get off the high road Summer. We all got pink eye because you wouldn't stop texting on the toilet. Sapien per ubique volumus nec vix legimus habitant convenire. Hac proin nihil pertinacia prodesset patrioque singulis electram dolorum. Facilisis evertitur himenaeos senserit magnis interdum et. Nec discere lorem vehicula eius tacimates deserunt. Interdum morbi blandit viris dicat et explicari."/>
        <TextView
            android:id="@+id/tracking_number_label"
            android:layout_marginTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            app:layout_constraintTop_toBottomOf="@+id/detail"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="#ccc"
            android:text="Numéro de suivi:"/>
        <TextView
            android:id="@+id/tracking_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:textStyle="bold"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toTopOf="@id/tracking_number_label"
            app:layout_constraintStart_toEndOf="@id/tracking_number_label"
            android:text="KMTS-1234-A"/>

       <LinearLayout
           android:id="@+id/from_lay"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_marginRight="2dp"
           app:layout_constraintEnd_toStartOf="@id/to_lay"
           app:layout_constraintTop_toBottomOf="@+id/tracking_number_label"
           app:layout_constraintStart_toStartOf="parent"
           android:layout_marginTop="10dp">
           <TextView
               android:id="@+id/from_label"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="#ccc"
               android:layout_marginTop="10dp"
               android:text="De"/>
           <TextView
               android:id="@+id/from"
               android:layout_width="wrap_content"
               android:maxLines="1"
               android:ellipsize="end"
               android:layout_height="wrap_content"
               android:textStyle="bold"
               android:text="Jean Paul"/>
           <TextView
               android:id="@+id/from_name"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:maxLines="1"
               android:ellipsize="end"
               android:text="EFG, Miami, USA"/>
           <TextView
               android:id="@+id/from_direction"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:maxLines="1"
               android:ellipsize="end"
               android:text="123 Main Street Apartment 4B"/>
           <TextView
               android:id="@+id/from_date"
               android:maxLines="1"
               android:ellipsize="end"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="23 juin 2012"/>
       </LinearLayout>
        <LinearLayout
            android:id="@+id/to_lay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="2dp"
            app:layout_constraintStart_toEndOf="@id/from_lay"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/from_lay">

            <TextView
                android:id="@+id/to_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ccc"
                android:layout_marginTop="10dp"
                android:text="À"/>
            <TextView
                android:id="@+id/to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="Joseph Magloire"/>
            <TextView
                android:id="@+id/to_name"
                android:layout_width="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_height="wrap_content"
                android:text="ABC, Saint-marc, Haiti"/>
            <TextView
                android:id="@+id/to_direction"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lascirie Prolongé #4"/>
            <TextView
                android:id="@+id/to_date"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23 juin 2012"/>

        </LinearLayout>
        <TextView
            android:id="@+id/shipment_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Livré"
            android:padding="5dp"
            android:textColor="@color/white"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_status"
            app:layout_constraintTop_toBottomOf="@id/to_lay"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>





</com.google.android.material.card.MaterialCardView>